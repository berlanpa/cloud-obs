# LiveKit Configuration
LIVEKIT_URL=ws://localhost:7880
LIVEKIT_API_KEY=devkey
LIVEKIT_API_SECRET=secret

# OpenAI Configuration (for AI-powered camera analysis)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
FRAME_SAMPLE_INTERVAL=3.0

# Piper TTS Configuration (Local, Open Source)
TTS_SPEED=1.0  # 1.0 = normal, 0.8 = faster, 1.2 = slower

# Camera Configuration
NUM_CAMERAS=5

# Switching Policy
MIN_HOLD_SEC=2.0
COOLDOWN_SEC=4.0
DELTA_S_THRESHOLD=0.15

# Keywords for detection
KEYWORD_LIST=goal,applause,breaking,important,announcement,look,wow

# VLM Configuration
VLM_INTERVAL_MS=700
VLM_MODEL=liuhaotian/llava-v1.5-7b
VLM_LOAD_4BIT=true

# YOLO Configuration
YOLO_MODEL=yolo11n
YOLO_USE_TENSORRT=false  # Set to true after TensorRT engine is built

# Whisper Configuration
WHISPER_MODEL=turbo
WHISPER_USE_BATCHED=true
WHISPER_BATCH_SIZE=8

# ByteTrack Configuration
BYTETRACK_ENABLED=true
TRACK_THRESH=0.5

# Ranking Configuration
RANKING_METHOD=rule-based  # or "xgboost"
XGBOOST_MODEL_PATH=/models/camera_ranker.xgb

# Narration Configuration
MAX_NARRATION_WORDS=12
NARRATION_ENABLED=true
